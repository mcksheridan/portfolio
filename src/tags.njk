---
layout: layouts/base.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
permalink: "/tags/{{ tag }}/index.html"
eleventyComputed:
  title: "Posts tagged: {{ tag }}"
---

<h2>Posts tagged "{{ tag }}"</h2>

<ul>
{% for post in collections.posts %}
  <li>
    <a href="{{ post.url }}">{{ post.data.title }}</a>
  </li>
{% endfor %}
</ul>
